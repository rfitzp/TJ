{
    "g_r":   0.00,        // Real part of normalized growth-rate in MHD frame 
    "g_i":   1.00,        // Imaginary part of normalized growth-rate in MHD frame
    "Qe":    -0.15,       // Normalized electron diamagnetic frequency
    "Qi":    0.15,        // Normalized ion diamagnetic frequency
    "D":     0.1,         // Normalized ion sound radius
    "Pphi":  1.0,         // Normalized momentum diffusivity
    "Pperp": 0.1,         // Normalized energy diffusivity
    "cbeta": 1.0,         // Normalized plasma pressure

    "JK":    1,           // Flag for J.-K. Park calculation
    
    "pstart": 8.0,        // Layer equations integrated from p = pstart to p = pend 
    "pend":   1.0e-6,     // Layer equations integrated from p = pstart to p = pend 
    "P3max":  20.0,       // Value of Pmax[3] above which switch to low-D layer equations made

    "Scan":   1,          // Flag for performing frequency scan
    "Fscan":  1.01,       // Scan from g_i = - Fmax * (Qe - Qi) to g_i = Fmax * (Qe - Qi)
    "Nscan":  500,        // Number of points in scan
    
    "acc":  1.0e-14,      // Integration accuracy
    "h0":   1.0e-3,       // Initial integration step-length
    "hmin": 1.0e-10,      // Minimum integration step-length 
    "hmax": 1.0e-2        // Maximum integration step-length
}


