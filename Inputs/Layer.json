{
    "LAYER":  0,          // Flag for layer calculation

    "B0":    12.0,        // On-axis toroidal magnetic field-strength (T)
    "R0":    2.0,         // On-axis plasma major radius (m) 
    "n0":    3.0e20,      // On-axis electron number density (m^-3)
    "alpha": 0.5,         // Assumed electron number density profile: n0 (1 - r^2)^alpha
    "Zeff":  2.0,         // Effective ion charge number
    "Mion":  2.0,         // Ion mass number
    "Chip":  0.2,         // Perpendicular momentum/energy diffusivity (m^2/s)
    "Teped": 100.0,       // Electron temperature at edge of plasma (eV)
    	  
    "pstart": 6.0,        // Layer equations integrated from p = pstart to p = pend 
    "pend":   1.0e-8,     // Layer equations integrated from p = pstart to p = pend 
    "P3max":  20.0,       // Value of Pmax[3] above which switch to low-D layer equations made 
    "Nscan":  1000,       // Number of points in marginal stability and frequency scans 
    
    "acc":  1.0e-12,      // Integration accuracy
    "h0":   1.0e-2,       // Initial integration step-length
    "hmin": 1.0e-10,      // Minimum integration step-length 
    "hmax": 1.0e-1,       // Maximum integration step-length
    
    "Eta":     1.0e-12,   // Minimum magnitude of f at root f(x) = 0 
    "Maxiter": 60,        // Maximum number of Newton iterations
    "eps":     1.0e-6,    // Step-size for calculation of Jacobian
    "smax":    0.1,       // Maximum Newton step-size 
    "smin":    1.0e-9     // Minimum Newton step-size
}


